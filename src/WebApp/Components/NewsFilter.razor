@using Core.News

<div class="filter-container mb-4">
    <div class="row g-3">
        <!-- Barra de Pesquisa -->
        <div>
            <div class="search-container">
                <div class="input-group">
                    <span class="input-group-text bg-white border-end-0">
                        <i class="bi bi-search text-muted"></i>
                    </span>
                    <input
                        type="text"
                        class="form-control border-start-0"
                        placeholder="Buscar notícias..."
                        @bind-value="_searchText"
                        @bind-value:event="oninput"
                        @onkeyup="HandleSearch"/>
                    @if (!string.IsNullOrEmpty(_searchText))
                    {
                        <button class="btn btn-outline-secondary border-start-0" @onclick="ClearSearch">
                            <i class="bi bi-x-lg"></i>
                        </button>
                    }
                </div>
            </div>
        </div>

        <!-- Dropdown de Categorias para Mobile -->
        <div class="col-md-6 d-block d-md-none">
            <Dropdown>
                @* ReSharper disable once Razor.UnresolvedComponent *@
                <DropdownToggle Color="ButtonColor.Light" Class="w-100">
                    <i class="bi bi-filter me-2"></i>
                    @(SelectedSubject == null ? "Todas as Categorias" : SubjectDict![SelectedSubject.Value])
                </DropdownToggle>
                <DropdownMenu>
                    <DropdownItem @onclick="SetSubjectAsNull" Active="SelectedSubject == null">
                        Todas as Categorias
                    </DropdownItem>
                    <DropdownDivider/>
                    @if (SubjectDict != null)
                    {
                        @foreach (var subject in SubjectDict)
                        {
                            <DropdownItem
                                @onclick="@(() => SetSubject(subject.Key))"
                                Active="SelectedSubject == subject.Key">
                                @subject.Value
                            </DropdownItem>
                        }
                    }
                </DropdownMenu>
            </Dropdown>
        </div>
    </div>

    <!-- Pills de Categorias para Desktop -->
    <div class="category-pills mt-3 d-none d-md-block">
        <div class="d-flex flex-wrap gap-2" style="justify-content: center">
            <button
                class="btn btn-pill @(SelectedSubject == null ? "btn-primary" : "btn-outline-primary")"
                @onclick="SetSubjectAsNull">
                Todas
            </button>
            @if (SubjectDict != null)
            {
                @foreach (var subject in SubjectDict)
                {
                    <button
                        class="btn btn-pill @(SelectedSubject == subject.Key ? "btn-primary" : "btn-outline-primary")"
                        @onclick="@(() => SetSubject(subject.Key))">
                        @subject.Value
                    </button>
                }
            }
        </div>
    </div>

    <!-- Exibição de Filtros Ativos -->
    @if (!string.IsNullOrEmpty(_searchText) || SelectedSubject != null)
    {
        <div class="active-filters mt-3">
            <div class="d-flex flex-wrap gap-2 align-items-center">
                <small class="text-muted me-2">Filtros ativos:</small>
                @if (!string.IsNullOrEmpty(_searchText))
                {
                    <Badge Color="BadgeColor.Light" Class="d-flex align-items-center">
                        <span class="me-2">@_searchText</span>
                        <button class="btn-close btn-close-sm" @onclick="ClearSearch"></button>
                    </Badge>
                }
                @if (SelectedSubject != null && SubjectDict != null)
                {
                    <Badge Color="BadgeColor.Light" Class="d-flex align-items-center">
                        <span class="me-2">@SubjectDict[SelectedSubject.Value]</span>
                        <button class="btn-close btn-close-sm" @onclick="SetSubjectAsNull"></button>
                    </Badge>
                }
                <button class="btn btn-link btn-sm p-0" @onclick="ClearAllFilters">Limpar todos</button>
            </div>
        </div>
    }
</div>

@code {
    private string _searchText = string.Empty;
    private Timer? _searchTimer;

    [Parameter] public SubjectEnum? SelectedSubject { get; set; }

    [Parameter] public Dictionary<SubjectEnum, string>? SubjectDict { get; set; }

    [Parameter] public EventCallback<SubjectEnum?> SelectedSubjectChanged { get; set; }

    [Parameter] public EventCallback<string> OnSearch { get; set; }

    private void SetSubject(SubjectEnum subject)
    {
        SelectedSubject = subject;
        SelectedSubjectChanged.InvokeAsync(subject);
    }

    private void SetSubjectAsNull()
    {
        SelectedSubject = null;
        SelectedSubjectChanged.InvokeAsync(null);
    }

    private void HandleSearch()
    {
        // Implementa debounce na pesquisa
        _searchTimer?.Dispose();
        _searchTimer = new Timer(async _ => { await InvokeAsync(async () => { await OnSearch.InvokeAsync(_searchText); }); }, null, 300, Timeout.Infinite);
    }

    private async Task ClearSearch()
    {
        _searchText = string.Empty;
        await OnSearch.InvokeAsync(string.Empty);
    }

    private async Task ClearAllFilters()
    {
        _searchText = string.Empty;
        await OnSearch.InvokeAsync(string.Empty);
        await SelectedSubjectChanged.InvokeAsync(null);
    }

    public void Dispose()
    {
        _searchTimer?.Dispose();
    }

}

<style>
    .btn-pill {
        border-radius: 50px;
        padding: 0.375rem 1rem;
        font-size: 0.875rem;
        transition: all 0.2s;
    }

    .search-container .input-group {
        border-radius: 50px;
    }

    .search-container .form-control:focus {
        box-shadow: none;
    }

    .search-container .input-group-text,
    .search-container .btn {
        background-color: transparent;
    }

    .active-filters .badge {
        padding: 0.5rem 0.75rem;
        font-weight: normal;
    }

    .btn-close-sm {
        font-size: 0.6rem;
    }
</style>